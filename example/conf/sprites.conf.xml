<xml>

	<!-- include default configuration file (relative to this file) -->
	<include src="{EXT}/conf/common.conf.xml" />

	<!-- default configuration -->
	<config>

		<!-- where is you htdocs root directory -->
		<!-- this is needed to create absolute urls -->
		<!-- default is relative to the config file -->
		<webroot>{CONF}/../sprites</webroot>

		<!-- define a current working directory -->
		<!-- you can adjust this also in the xml config -->
		<directory>{WWW}</directory>

		<!-- disable headers -->
		<headtmpl></headtmpl>

		<!-- disable crc file -->
		<crc-file>0</crc-file>

		<!-- disable comments -->
		<crc-comment>0</crc-comment>
		<head-comment>0</head-comment>

		<!-- maximum size to inline data -->
		<inlinedatamax>160KB</inlinedatamax>

	</config>

	<!-- prepare operations -->
	<prepare id="prepare" step="prepare" disabled="false" >

		<!-- create neccessary paths -->
		<mkdir path="fam/generated" />

	</prepare>

	<!-- optimize operations (id needed to overwrite) -->
	<optimize id="optimize" step="optimize" disabled="false">

		<!-- clean/fix text files -->
		<txt disabled="false">
			<!-- clean all js and css files -->
			<file path="." file="*.md" recursive="true" />
			<file path="." file="*.css" recursive="true" />
			<file path="." file="*.txt" recursive="true" />
			<file path="." file="*.html" recursive="true" />
		</txt>

		<!-- best gif compression -->
		<gif disabled="false">
			<!-- recursively improve gif compression -->
			<file path="." file="*.gif" recursive="true" />
		</gif>

		<!-- best jpg compression -->
		<jpg disabled="false">
			<!-- recursively improve jpg compression -->
			<file path="." file="*.jpg" recursive="true" />
		</jpg>

		<!-- best png compression -->
		<png disabled="false">
			<!-- recursively improve png compression -->
			<file path="." file="*.png" recursive="true" />
		</png>

	</optimize>

	<!-- main merge operations -->
	<merge id="default" disabled="false">

		<!-- build fam spriteset -->
		<css id="fam" step="fam" >

			<!-- use generated css as input file -->
			<input path="fam/generate/fam.css" />

			<!-- create output css files and the spriteset image -->
			<output path="fam/generated/inline.join.css" target="join" process="inlinedata" />
			<output path="fam/generated/inline.pack.css" target="compile" process="inlinedata" />
			<output path="fam/generated/spritesets.join.css" preprocess="spritesets" target="join" />
			<output path="fam/generated/spritesets.pack.css" preprocess="spritesets" target="compile" />
			<output path="fam/generated/spritesets.inline.join.css" preprocess="spritesets" target="join" process="inlinedata" />
			<output path="fam/generated/spritesets.inline.pack.css" preprocess="spritesets" target="compile" process="inlinedata" />

		</css>

	</merge>

</xml>
